import java.util.Scanner;

public class p1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int sum = 0;

        while (true) {
            System.out.println("점수를 입력하세요 (종료하려면 음수를 입력):");
            int num = sc.nextInt();

            if (num < 0) {
                break;
            }
            sum += num;
        }

        if (sum >= 0){
            System.out.println("점수의 총합은 : "+ sum);
        }
        else{
            System.out.println("입력된 점수가 없습니다.");
        }

        sc.close();

    }
}
